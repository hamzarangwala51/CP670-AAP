<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- ListView takes most of the screen, aligning to the top, start, and end of the parent -->
    <ListView
        android:id="@+id/chatListView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/sendButton"
         />
    <!-- EditText at the bottom left, aligning to the parent's start and bottom -->
    <EditText
        android:id="@+id/chatEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/sendButton"/>

    <!-- Send button at the bottom right, aligning to the parent's end and bottom -->

    <Button
        android:id="@+id/sendButton"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/chatListView"
        android:layout_toLeftOf="@+id/frame_layout"
        android:text="@string/sendbtnOnChat" />

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/chatListView"
        android:layout_marginHorizontal="10dp"

        />


</RelativeLayout>
